---
// src/components/CocktailCard.astro
export interface Props {
  imgSrc: string;
  imgAlt: string;
  title: string;
  url: string;
  description?: string;
  difficulty?: 'Easy' | 'Medium' | 'Advanced';
  servingSize?: string;
  featured?: boolean;
}

const { 
  imgSrc, 
  imgAlt, 
  title, 
  url, 
  description, 
  difficulty, 
  servingSize,
  featured = false 
} = Astro.props;
---

<article class={`cocktail-card ${featured ? 'featured' : ''}`}>
  <a href={url} class="card-link" aria-label={`View recipe for ${title}`}>
    <div class="card-image-wrapper">
      <picture>
        <source 
          media="(max-width: 768px)" 
          srcset={imgSrc.replace('.jpg', '-mobile.jpg')}
        >
        <img 
          src={imgSrc} 
          alt={imgAlt} 
          class="card-image"
          loading="lazy"
          width="400"
          height="300"
        />
      </picture>
      {featured && (
        <span class="featured-badge">Featured</span>
      )}
      {difficulty && (
        <span class={`difficulty-badge ${difficulty.toLowerCase()}`}>
          {difficulty}
        </span>
      )}
      <div class="image-overlay">
        <span class="view-recipe">View Recipe</span>
      </div>
    </div>
    
    <div class="card-content">
      <h3 class="card-title">{title}</h3>
      {description && (
        <p class="card-description">{description}</p>
      )}
      {servingSize && (
        <div class="card-meta">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <span>{servingSize}</span>
        </div>
      )}
    </div>
  </a>
</article>

<style>
  .cocktail-card {
    display: block;
    border-radius: var(--radius-md);
    overflow: hidden;
    background-color: var(--theme-bg-primary);
    box-shadow: var(--shadow-md);
    transition: transform var(--transition-base), 
                box-shadow var(--transition-base);
    position: relative;
    height: 100%;
  }
  
  .cocktail-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }
  
  .cocktail-card.featured {
    box-shadow: var(--shadow-lg);
    border: 2px solid var(--theme-accent);
  }
  
  .card-link {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: var(--theme-text-primary);
  }
  
  /* Image wrapper */
  .card-image-wrapper {
    position: relative;
    overflow: hidden;
    aspect-ratio: 4/3;
    background-color: var(--theme-bg-secondary);
  }
  
  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform var(--transition-slow);
  }
  
  .cocktail-card:hover .card-image {
    transform: scale(1.05);
  }
  
  /* Badges */
  .featured-badge,
  .difficulty-badge {
    position: absolute;
    padding: var(--space-xs) var(--space-sm);
    font-family: var(--font-family-heading);
    font-size: var(--font-size-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: var(--font-weight-bold);
    border-radius: var(--radius-sm);
    z-index: 2;
  }
  
  .featured-badge {
    top: var(--space-sm);
    left: var(--space-sm);
    background-color: var(--color-green-500);
    color: white;
  }
  
  .difficulty-badge {
    top: var(--space-sm);
    right: var(--space-sm);
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    backdrop-filter: blur(4px);
  }
  
  .difficulty-badge.easy {
    background-color: rgba(34, 139, 34, 0.9);
  }
  
  .difficulty-badge.medium {
    background-color: rgba(243, 156, 18, 0.9);
  }
  
  .difficulty-badge.advanced {
    background-color: rgba(208, 52, 44, 0.9);
  }
  
  /* Image overlay */
  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(0, 0, 0, 0.7) 100%
    );
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding: var(--space-lg);
    opacity: 0;
    transition: opacity var(--transition-base);
  }
  
  .cocktail-card:hover .image-overlay {
    opacity: 1;
  }
  
  .view-recipe {
    font-family: var(--font-family-heading);
    font-size: var(--font-size-sm);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: white;
    padding: var(--space-sm) var(--space-lg);
    border: 2px solid white;
    border-radius: var(--radius-sm);
    transform: translateY(20px);
    transition: transform var(--transition-base);
  }
  
  .cocktail-card:hover .view-recipe {
    transform: translateY(0);
  }
  
  /* Content section */
  .card-content {
    padding: var(--space-lg);
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  
  .card-title {
    font-family: var(--font-family-heading);
    font-size: clamp(1.25rem, 3vw, 1.5rem);
    text-transform: uppercase;
    margin: 0 0 var(--space-sm) 0;
    line-height: 1.2;
    color: var(--theme-text-primary);
  }
  
  .card-description {
    font-family: var(--font-family-body);
    font-size: var(--font-size-sm);
    line-height: var(--line-height-base);
    color: var(--theme-text-secondary);
    margin: 0 0 var(--space-md) 0;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .card-meta {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--font-size-sm);
    color: var(--theme-text-muted);
    margin-top: auto;
  }
  
  .card-meta svg {
    opacity: 0.7;
  }
  
  /* Mobile optimizations */
  @media (max-width: 768px) {
    .cocktail-card {
      box-shadow: var(--shadow-sm);
    }
    
    .card-content {
      padding: var(--space-md);
    }
    
    .card-title {
      font-size: 1.25rem;
    }
    
    .image-overlay {
      opacity: 1;
      background: linear-gradient(
        to bottom,
        transparent 50%,
        rgba(0, 0, 0, 0.5) 100%
      );
      padding: var(--space-md);
    }
    
    .view-recipe {
      display: none; /* Hide on mobile - tap to navigate */
    }
    
    .difficulty-badge,
    .featured-badge {
      font-size: 0.625rem;
      padding: var(--space-xxs) var(--space-xs);
    }
  }
  
  /* Touch device optimizations */
  @media (hover: none) {
    .cocktail-card:hover {
      transform: none;
    }
    
    .cocktail-card:active {
      transform: scale(0.98);
    }
    
    .card-image {
      transform: none !important;
    }
  }
  
  /* Grid container suggestions for parent */
  /* 
  Usage in parent component:
  
  <div class="cocktail-grid">
    <CocktailCard ... />
  </div>
  
  .cocktail-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-xl);
    padding: var(--space-xl);
  }
  
  @media (max-width: 768px) {
    .cocktail-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: var(--space-lg);
      padding: var(--space-lg);
    }
  }
  
  @media (max-width: 480px) {
    .cocktail-grid {
      grid-template-columns: 1fr;
      padding: var(--space-md);
    }
  }
  */
  
  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .cocktail-card,
    .card-image,
    .image-overlay,
    .view-recipe {
      transition: none;
    }
  }
</style>