---
// src/components/Header.astro
const { homepage } = Astro.props;
---

<header id="site-header">
  <div class="header-container">
    <a href="/" class="logo-link">
      <img src="/logo-primary.png" alt="Jerry Can Spirits Logo" class="logo-image">
    </a>

    <nav class="desktop-nav">
      <ul>
        <li><a href="/ethos">Our Ethos</a></li>
        <li><a href="/products">Products</a></li>
        <li><a href="/serves">Field Manual</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </nav>

    <button id="mobile-menu-toggle" class="mobile-menu-toggle" aria-label="Open menu">
      <span class="hamburger-box">
        <span class="hamburger-inner"></span>
      </span>
    </button>
  </div>
</header>

<div id="mobile-menu-overlay" class="mobile-menu-overlay">
  <nav class="mobile-nav">
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/ethos">Our Ethos</a></li>
      <li><a href="/products">Products</a></li>
      <li><a href="/serves">Field Manual</a></li>
      <li><a href="/contact">Contact</a></li>
    </ul>
  </nav>
</div>

<style>
  #site-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    padding: 1rem var(--page-padding);
    background-color: var(--parchment); /* ALWAYS has a solid background */
    border-bottom: 1px solid rgba(0,0,0,0.1);
  }
  .header-container {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo-image { height: 50px; }

  /* --- DESKTOP NAVIGATION --- */
  .desktop-nav {
    display: none; /* Hidden on mobile */
  }
  @media (min-width: 769px) {
    .desktop-nav { display: block; }
  }
  .desktop-nav ul {
    list-style: none; margin: 0; padding: 0;
    display: flex; gap: 2rem;
  }
  .desktop-nav a {
    text-decoration: none;
    font-family: 'Oswald', sans-serif;
    text-transform: uppercase;
    color: var(--deep-green);
  }

  /* --- MOBILE NAVIGATION --- */
  .mobile-menu-toggle {
    display: block; /* Visible on mobile */
    background: none; border: none; cursor: pointer;
    color: var(--deep-green); /* ALWAYS has a dark color */
    padding: 10px;
    z-index: 1001;
  }
  @media (min-width: 769px) {
    .mobile-menu-toggle { display: none; }
  }
  .hamburger-box { display: inline-block; position: relative; width: 24px; height: 18px; }
  .hamburger-inner, .hamburger-inner::before, .hamburger-inner::after {
    width: 24px; height: 2px; background-color: currentColor;
    border-radius: 4px; position: absolute;
    transition: transform .2s ease-in-out, opacity .2s ease-in-out;
  }
  .hamburger-inner { top: 50%; transform: translateY(-50%); }
  .hamburger-inner::before, .hamburger-inner::after { content: ''; display: block; }
  .hamburger-inner::before { top: -8px; }
  .hamburger-inner::after { bottom: -8px; }

  /* Open State for Hamburger */
  .is-open .hamburger-inner { background-color: transparent; }
  .is-open .hamburger-inner::before { top: 0; transform: rotate(45deg); }
  .is-open .hamburger-inner::after { bottom: 0; transform: rotate(-45deg); }

  /* --- MOBILE OVERLAY --- */
  .mobile-menu-overlay {
    position: fixed; top: 0; left: 0;
    width: 100%; height: 100%;
    background-color: var(--parchment);
    display: flex; justify-content: center; align-items: center;
    opacity: 0; visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    z-index: 999;
  }
  .mobile-menu-overlay.is-open {
    opacity: 1; visibility: visible;
  }
  .mobile-nav ul { list-style: none; padding: 0; text-align: center; }
  .mobile-nav li { margin-bottom: 2rem; }
  .mobile-nav a {
    font-size: 2rem; color: var(--deep-green);
    text-decoration: none; font-family: 'Oswald', sans-serif;
    text-transform: uppercase;
  }
</style>

<script is:inline>
  const toggleBtn = document.getElementById('mobile-menu-toggle');
  const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
  
  if (toggleBtn && mobileMenuOverlay) {
    toggleBtn.addEventListener('click', () => {
      mobileMenuOverlay.classList.toggle('is-open');
      toggleBtn.classList.toggle('is-open');
    });
  }
</script>