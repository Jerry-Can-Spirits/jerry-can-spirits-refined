---
// src/components/Header.astro
const { homepage } = Astro.props;
---
<header id="site-header" class:list={{ 'header-on-homepage': homepage }}>
  <div class="header-container">
    <a href="/" class="logo-link">
      <img src="/logo-primary.png" alt="Jerry Can Spirits Logo" class="logo-image">
    </a>
    <nav class="desktop-nav">
      <ul>
        <li><a href="/ethos">Our Ethos</a></li>
        <li><a href="/products">Products</a></li>
        <li><a href="/serves">Field Manual</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </nav>
    <button id="mobile-menu-toggle" class="mobile-menu-toggle" aria-label="Open menu">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M3 12H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M3 6H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M3 18H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  </div>

  <div id="mobile-menu-overlay" class="mobile-menu-overlay">
    <nav class="mobile-nav">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/ethos">Our Ethos</a></li>
        <li><a href="/products">Products</a></li>
        <li><a href="/serves">Field Manual</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  /* Header Styles */
  #site-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    padding: 1rem var(--page-padding);
    background-color: transparent;
    transition: background-color 0.3s ease, border-bottom 0.3s ease;
  }
  #site-header.is-scrolled {
    background-color: var(--parchment);
    border-bottom: 1px solid rgba(0,0,0,0.1);
  }
  .header-container {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo-image { height: 50px; }

  /* Desktop Navigation */
  .desktop-nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 2rem;
  }
  .desktop-nav a {
    text-decoration: none;
    color: var(--deep-green);
    font-family: 'Oswald', sans-serif;
    text-transform: uppercase;
  }
  .header-on-homepage .desktop-nav a {
    color: var(--parchment); /* White text on homepage hero */
  }
  #site-header.is-scrolled .desktop-nav a {
    color: var(--deep-green); /* Dark text when scrolled */
  }

  /* Mobile Menu Button (Hamburger) */
  .mobile-menu-toggle {
    display: none; /* Hidden on desktop */
    background: none;
    border: none;
    cursor: pointer;
    color: var(--deep-green);
  }
  .header-on-homepage .mobile-menu-toggle {
    color: var(--parchment);
  }
  #site-header.is-scrolled .mobile-menu-toggle {
    color: var(--deep-green);
  }

  /* Mobile Menu Overlay */
  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--parchment);
    display: flex;
    justify-content: center;
    align-items: center;
    transform: translateY(-100%);
    transition: transform 0.4s ease;
    z-index: 999; /* Below the header itself */
  }
  .mobile-menu-overlay.is-open {
    transform: translateY(0);
  }
  .mobile-nav ul {
    list-style: none;
    padding: 0;
    text-align: center;
  }
  .mobile-nav li {
    margin-bottom: 2rem;
  }
  .mobile-nav a {
    font-size: 2rem;
    color: var(--deep-green);
    text-decoration: none;
    font-family: 'Oswald', sans-serif;
    text-transform: uppercase;
  }

  /* Responsive Breakpoint */
  @media (max-width: 768px) {
    .desktop-nav {
      display: none;
    }
    .mobile-menu-toggle {
      display: block;
    }
  }
</style>

<script is:inline>
  // Script for mobile menu toggle
  const toggleBtn = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu-overlay');
  toggleBtn.addEventListener('click', () => {
    mobileMenu.classList.toggle('is-open');
  });

  // Script for scrolled header background
  const header = document.getElementById('site-header');
  function handleScroll() {
    if (window.scrollY > 10) {
      header.classList.add('is-scrolled');
    } else {
      header.classList.remove('is-scrolled');
    }
  }
  document.addEventListener('scroll', handleScroll, { passive: true });
</script>