---
// src/components/ToolkitCard.astro
export interface Props {
  imgSrc: string;
  name: string;
  description: string;
}
const { imgSrc, name, description } = Astro.props;
---
<div class="toolkit-card">
  <div class="card-image-container">
    <img src={imgSrc} alt={name} loading="lazy" />
  </div>
  <div class="card-content">
    <h3>{name}</h3>
    <p>{description}</p>
  </div>
</div>
