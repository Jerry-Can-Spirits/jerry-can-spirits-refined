---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();

// You could make these props if needed for different pages
const quickLinks = [
  { href: '/ethos', label: 'Our Ethos' },
  { href: '/products', label: 'Products' },
  { href: '/serves', label: 'Field Manual' },
  { href: '/contact', label: 'Contact' }
];

const legalLinks = [
  { href: '/shipping-policy', label: 'Shipping Policy' },
  { href: '/returns-policy', label: 'Returns Policy' },
  { href: '/privacy-policy', label: 'Privacy Policy' },
  { href: '/terms-of-service', label: 'Terms of Service' }
];

const responsibleLinks = [
  { href: 'https://www.drinkiq.com/en-gb', label: 'DrinkIQ', external: true },
  { href: 'https://responsibledrinking.eu/', label: 'Responsible Drinking', external: true },
  { href: 'https://www.drinkaware.co.uk', label: 'Drinkaware', external: true }
];
---

<footer id="footer" class="site-footer">
  <div class="container">    
    <!-- Main footer content -->
    <div class="footer-grid">
      <!-- Column 1: About & Responsibility -->
      <div class="footer-column">
        <h3 class="footer-title">Adventure Responsibly</h3>
        <p class="footer-text">
          Jerry Can Spirits is committed to responsible drinking. 
          Please enjoy our products in moderation.
        </p>
        <ul class="footer-links">
          {responsibleLinks.map(link => (
            <li>
              <a 
                href={link.href} 
                target="_blank" 
                rel="noopener noreferrer"
                class="footer-link external"
              >
                {link.label}
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/>
                </svg>
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Column 2: Logo & Social -->
      <div class="footer-column logo-column">
        <img 
          src="/logo-etch.png" 
          alt="Jerry Can Spirits" 
          class="footer-logo"
          width="120"
          height="60"
          loading="lazy"
        />
        <div class="social-links">
          <a 
            href="https://www.facebook.com/profile.php?id=61579347508647" 
            target="_blank" 
            rel="noopener noreferrer" 
            aria-label="Follow us on Facebook" 
            class="social-link"
          >
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
