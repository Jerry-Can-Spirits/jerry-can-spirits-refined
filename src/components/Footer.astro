  <div class="container">    
    <!-- Main footer content -->
    <div class="footer-grid">
      <!-- Column 1: About & Responsibility -->
      <div class="footer-column">
        <h3 class="footer-title">Adventure Responsibly</h3>
        <p class="footer-text">
