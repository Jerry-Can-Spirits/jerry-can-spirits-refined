<style>
  .site-footer {
    background-color: var(--dark-olive);
    color: var(--parchment);
    padding: 4rem 2rem 1.5rem;
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    padding-bottom: 3rem;
    text-align: left;
  }
  .footer-section {
    padding: 0 1rem;
  }
  .footer-title {
    font-family: 'Oswald', sans-serif;
    font-size: 1.1rem;
    text-transform: uppercase;
    color: var(--parchment);
    margin-bottom: 1.5rem;
    letter-spacing: 1px;
    opacity: 0.9;
  }
  .small-text {
    font-size: 0.9rem;
    opacity: 0.7;
    margin-bottom: 1rem;
    max-width: 250px;
  }
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .footer-links li {
    margin-bottom: 0.75rem;
  }
  .footer-links a {
    color: var(--parchment);
    text-decoration: none;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }
  .footer-links a:hover {
    opacity: 1;
    text-decoration: underline;
  }
  .logo-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .etched-logo {
    max-width: 120px;
    opacity: 0.6;
    margin-bottom: 1.5rem;
  }
  .social-links {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }
  .social-icon {
    color: var(--parchment);
    opacity: 0.6;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }
  .social-icon:hover {
    opacity: 1;
    transform: scale(1.1);
  }
  .footer-bottom {
    border-top: 1px solid rgba(245, 241, 230, 0.1);
    padding-top: 1.5rem;
    text-align: center;
    font-size: 0.9rem;
    opacity: 0.5;
  }
  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      text-align: center;
    }
    .footer-section {
      margin-bottom: 2.5rem;
    }
    .logo-section {
      order: -1;
    }
    .small-text {
      margin: 0 auto 1rem;
    }
  }
</style>