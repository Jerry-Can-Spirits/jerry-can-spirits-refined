---
// src/pages/serves/index.astro
import MainLayout from '../../layouts/MainLayout.astro';
import CocktailCard from '../../components/CocktailCard.astro';
// We will import the master recipe list from your central data file
import { allRecipes } from './recipe-data';
---

<MainLayout 
  title="Field Manual | Jerry Can Spirits" 
  description="Cocktail recipes and serving suggestions for Jerry Can Spirits"
>
  <div class="serves-page">
    <header class="page-hero">
      <div class="hero-content">
        <span class="page-label">Recipes & Serves</span>
        <h1 class="page-title">The Field Manual</h1>
        <p class="page-description">
          Battle-tested recipes and serving suggestions for every expedition.
          From classic cocktails to campfire creations.
        </p>
      </div>
    </header>

    <main class="serves-content">
      <div class="filter-bar">
        <button class="filter-btn active" data-filter="all">All Recipes</button>
        <button class="filter-btn" data-filter="easy">Easy</button>
        <button class="filter-btn" data-filter="medium">Medium</button>
        <button class="filter-btn" data-filter="advanced">Advanced</button>
      </div>

      <div class="cocktail-grid">
        {allRecipes.map(cocktail => (
          <CocktailCard 
            title={cocktail.name}
            imgSrc={cocktail.image}
            imgAlt={cocktail.imageAlt}
            url={`/serves/${cocktail.slug}`}
            description={cocktail.description}
            difficulty={cocktail.difficulty}
          />
        ))}
      </div>
    </main>

    <section class="serves-cta">
      <div class="cta-content">
        <h2>Share Your Creations</h2>
        <p>Tag us @jerrycanspirits to be featured in our field reports</p>
        <div class="social-buttons">
          <a href="https://www.instagram.com/jerrycanspirits" target="_blank" rel="noopener noreferrer" class="social-btn">
            Follow on Instagram
          </a>
        </div>
      </div>
    </section>
  </div>
</MainLayout>

<script src="../../scripts/js/cocktail-filter.js"></script>