---
// src/pages/serves.astro
import MainLayout from '../layouts/MainLayout.astro';
import CocktailCard from '../components/CocktailCard.astro';
---

<MainLayout>
  <main class="serves-page">
    <header class="page-header">
      <h1>Field Manual</h1>
      <p>Standard issue serves and cocktail intelligence for the discerning operative. Mission-ready recipes for our inaugural rum.</p>
    </header>

    <section class="featured-serve">
      <div class="featured-image">
        <img src="https://images.unsplash.com/photo-1598542784923-382d33a27f67?ixlib=rb-4.0.3&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=800" alt="A dark and stormy cocktail in a highball glass">
      </div>
      <div class="featured-content">
        <h2>The Signature Serve</h2>
        <h3>The "Jerry Can" Dark & Stormy</h3>
        <p>The definitive way to enjoy our spirit. The rich notes of our rum cut through the fiery ginger beer, balanced by a sharp squeeze of fresh lime. Simple, robust, and effective.</p>
        <a href="#" class="btn">View Recipe</a>
      </div>
    </section>

    <section class="cocktail-grid-section">
      <h2>Mission Cocktails</h2>
      <div class="cocktail-grid">
        <CocktailCard 
          title="The Quartermaster's Old Fashioned"
          imgSrc="https://images.unsplash.com/photo-1588194279745-667f56a3f78e?ixlib=rb-4.0.3&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=600"
          imgAlt="An old fashioned cocktail with a large ice cube and orange peel"
          url="/serves/quartermasters-old-fashioned"
        />
        <CocktailCard 
          title="The Reconnaissance Refresher"
          imgSrc="https://images.unsplash.com/photo-1623593689495-2c812a458858?ixlib=rb-4.0.3&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=600"
          imgAlt="A rum mojito with fresh mint and lime"
          url="/serves/reconaissance-refresher"
        />
        <CocktailCard 
          title="The Night Watch Negroni"
          imgSrc="https://images.unsplash.com/photo-1608885633301-a1e4893122b1?ixlib=rb-4.0.3&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=600"
          imgAlt="A negroni cocktail with a twist of orange peel"
          url="/serves/night-watch-negroni"
        />
      </div>
    </section>

  </main>
</MainLayout>

<style>
  .serves-page {
    padding: 3rem var(--page-padding);
    max-width: 1200px;
    margin: 0 auto;
  }
  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  .page-header h1 {
    font-size: 3.5rem;
    text-transform: uppercase;
    color: var(--dark-olive);
    margin-bottom: 1rem;
  }
  .page-header p {
    font-size: 1.2rem;
    color: var(--dark-olive);
    max-width: 600px;
    margin: 0 auto;
  }
  .featured-serve {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
    background-color: var(--parchment);
    padding: 3rem;
    border-radius: 8px;
    margin-bottom: 5rem;
  }
  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
  }
  .featured-content h2 {
    font-size: 1.2rem;
    text-transform: uppercase;
    color: var(--dark-olive);
    letter-spacing: 1px;
    margin-bottom: 0.5rem;
  }
  .featured-content h3 {
    font-size: 2.5rem;
    font-family: 'Oswald', sans-serif;
    color: var(--dark-olive);
    margin-bottom: 1.5rem;
  }
  .featured-content p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 2rem;
  }
  .btn {
    display: inline-block;
    background-color: var(--deep-green);
    color: var(--parchment);
    padding: 12px 24px;
    text-decoration: none;
    font-family: 'Oswald', sans-serif;
    text-transform: uppercase;
    border-radius: 4px;
    transition: background-color 0.2s ease;
  }
  .btn:hover {
    background-color: var(--dark-olive);
  }
  .cocktail-grid-section {
    text-align: center;
  }
  .cocktail-grid-section h2 {
    font-size: 2.5rem;
    text-transform: uppercase;
    color: var(--dark-olive);
    margin-bottom: 3rem;
  }
  .cocktail-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .featured-serve {
      grid-template-columns: 1fr;
      padding: 2rem;
    }
    .page-header h1 {
      font-size: 2.5rem;
    }
  }
</style>